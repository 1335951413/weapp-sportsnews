<!-- 轮播图组件子元素 -->
<template name="swiper-item">
  <swiper-item>
    <navigator url="../picture-page/picture-page?urltype={{item.urlType}}&id={{item.documentId}}" class="slide-nav">
    <image src="{{item.thumbnail}}" mode="aspectFill"/>
    <text class="title">{{item.title}}</text>
    </navigator>
  </swiper-item>
</template>

<!-- 轮播图组件总体 -->
<template name="swiper">
  <swiper class="swiper" autoplay="true" interval="5000" duration="1000" indicator-dots="{{swiper.item.length > 1}}">
    <block wx:if="{{subclass}}"><!--导航页用的-->
      <block wx:for="{{subclass.podItems}}" wx:for-index="index" wx:key="index">
       <template is="swiper-item" data="{{item}}" />
      </block>
    </block>
    <block wx:else><!--主页用的-->
      <block wx:for="{{swiper.item}}" wx:for-index="index" wx:key="index">
        <template is="swiper-item" data="{{item}}" />
      </block>
    </block>
  </swiper>
</template>