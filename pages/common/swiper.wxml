<!-- 轮播图组件子元素 -->
<template name="swiper-item">
  <swiper-item>
    <image src="{{item.thumbnail}}" class="slide-image" mode="aspectFill"/>
    <text class="title">{{item.title}}</text>
  </swiper-item>
</template>

<!-- 轮播图组件总体 -->
<template name="swiper">
  <swiper class="swiper" autoplay="true" interval="5000" duration="1000" indicator-dots="{{swiper.item.length > 1}}">
    <block wx:if="{{subclass}}">
      <block wx:for="{{subclass.podItems}}" wx:for-index="index" wx:key="index">
       <template is="swiper-item" data="{{item}}" />
      </block>
    </block>
    <block wx:else>
      <block wx:for="{{swiper.item}}" wx:for-index="index" wx:key="index">
        <template is="swiper-item" data="{{item}}" />
      </block>
    </block>
  </swiper>
</template>