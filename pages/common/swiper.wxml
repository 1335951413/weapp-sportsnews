<!-- 轮播图组件子元素 -->

<template name="swiper-item">
  <swiper-item>
    <view bindtap='navToPicture' data-id="{{item.id ? item.id : item.links[0].url}}" class="slide-nav">
    <image src="{{item.thumbnail}}" mode="aspectFill"/>
    <text class="title">{{item.title}}</text>
    </view>
  </swiper-item>
</template>


<!-- 轮播图组件总体 -->
<template name="swiper">
  <swiper class="swiper" autoplay="true" interval="5000" duration="1000" indicator-dots="{{swiper.item.length > 1}}">
    <block wx:if="{{subclass}}"><!--专题页用的-->
      <block wx:for="{{subclass.podItems}}" wx:for-item="item" wx:key="index">
       <template is="swiper-item" data="{{item}}" />
      </block>
    </block>
    <block wx:else><!--主页用的-->
      <block wx:for="{{swiper.item}}" wx:for-item="item" wx:key="index">
        <template is="swiper-item" data="{{item}}" />
      </block>
    </block>
  </swiper>
</template>