
<template name="article">
  <view  wx:if="{{item.type != 'web'}}" bindtap='navToArticle' data-id="{{item.id ? item.id : item.links[0].url}}" class="newitem">
        <image class="poster" src="{{item.thumbnail}}"></image>
        <view class="meta">
          <text class="title">{{item.title}}</text>
          <view class="other">
            <view class="source">
              <image wx:if="{{item.subscribe.logo}}" src="{{item.subscribe.logo}}" class="logo" />
              <text wx:if="{{item.source}}" class="detail">{{item.source}}</text>
            </view>
            <text wx:if="{{item.commentsall}}" class="comment">{{item.commentsall}}</text>
          </view>
        </view>
    </view>
</template>


<template name="video">
  <view bindtap="navToVideo" data-id="{{item.id ? item.id : item.links[0].url}}" class="newitem">
        <image class="poster" src="{{item.thumbnail}}"></image>
        <view class="meta">
          <text class="title">{{item.title}}</text>
          <view class="other">
            <view class="source">
              <image wx:if="{{item.subscribe.logo}}" src="{{item.subscribe.logo}}" class="logo" />
              <text wx:if="{{item.source}}" class="detail">{{item.source}}</text>
              <!-- <text wx:if="{{item.updateTime}}" class="updateTime">{{item.updateTime}}</text> -->
            </view>
            <text wx:if="{{item.commentsall}}" class="comment">{{item.commentsall}}</text>
          </view>
        </view>
    </view>
</template>


<template name="card-article">
  <block wx:if="{{item.documentId != 'default'}}">
    <template is="article" data="{{item}}"></template>
  </block>
  <block wx:else>
    <template is="video" data="{{item}}"></template>
  </block>
</template>
